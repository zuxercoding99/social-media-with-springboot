<configuration scan="true">

    <!-- Carpeta base -->
    <property name="LOG_HOME" value="./logs" />

    <!-- ===================== -->
    <!-- APPENDER CONSOLA -->
    <!-- ===================== -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%X{logType}] [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- ===================== -->
    <!-- APPENDERS ARCHIVO -->
    <!-- ===================== -->

    <appender name="ERRORS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/errors.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/errors.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} [ERRORS] [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <appender name="UNEXPECTED_ERRORS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/unexpected_errors.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/unexpected_errors.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} [UNEXPECTED_ERRORS] [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <appender name="REQUESTS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/requests.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/requests.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} [REQUESTS] [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <appender name="SECURITY" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/security.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/security.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} [SECURITY] [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- ===================== -->
    <!-- LOGGERS -->
    <!-- ===================== -->

    <logger name="errors" level="WARN">
        <appender-ref ref="ERRORS" />
        <appender-ref ref="STDOUT" />
        <MDCKey>logType</MDCKey>
        <MDCValue>ERRORS</MDCValue>
    </logger>

    <logger name="unexpected_errors" level="ERROR">
        <appender-ref ref="UNEXPECTED_ERRORS" />
        <appender-ref ref="STDOUT" />
        <MDCKey>logType</MDCKey>
        <MDCValue>UNEXPECTED_ERRORS</MDCValue>
    </logger>

    <logger name="requests" level="INFO">
        <appender-ref ref="REQUESTS" />
        <appender-ref ref="STDOUT" />
        <MDCKey>logType</MDCKey>
        <MDCValue>REQUESTS</MDCValue>
    </logger>

    <logger name="security" level="INFO">
        <appender-ref ref="SECURITY" />
        <appender-ref ref="STDOUT" />
        <MDCKey>logType</MDCKey>
        <MDCValue>SECURITY</MDCValue>
    </logger>

    <!-- ===================== -->
    <!-- ROOT -->
    <!-- ===================== -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>
