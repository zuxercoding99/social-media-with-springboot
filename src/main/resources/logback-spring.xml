<configuration scan="true">

    <!-- Carpeta base -->
    <property name="LOG_HOME" value="./logs" />

    <!-- Appender para errores -->
    <appender name="ERRORS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/errors.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/errors.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Appender para unexpected errors -->
    <appender name="UNEXPECTED_ERRORS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/unexpected_errors.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/unexpected_errors.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Appender para requests -->
    <appender name="REQUESTS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/requests.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/requests.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Appender para security -->
    <appender name="SECURITY" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/security.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/security.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Asociar cada logger a su archivo -->
    <logger name="errors" level="WARN" additivity="false">
        <appender-ref ref="ERRORS" />
    </logger>

    <logger name="unexpected_errors" level="ERROR" additivity="false">
        <appender-ref ref="UNEXPECTED_ERRORS" />
    </logger>

    <logger name="requests" level="INFO" additivity="false">
        <appender-ref ref="REQUESTS" />
    </logger>

    <logger name="security" level="INFO" additivity="false">
        <appender-ref ref="SECURITY" />
    </logger>

    <!-- Consola -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
